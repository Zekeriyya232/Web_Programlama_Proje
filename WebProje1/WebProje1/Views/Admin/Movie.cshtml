@model List<MovieVM>

@{

	ViewData["Title"] = "Filmler";
}

<div class="row">
	<div class="col">
		<h1 class="display-4">@ViewData["Title"]</h1>
		<hr />
	</div>
</div>
<div class="row mb-3">
	<div class="col">
		<a asp-action="CreateMovie" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>Film Ekle</a>
	</div>
</div>
<div class="row mb-3">
	<div class="col">
		<table class="table table-hover table-sn">
			<thead>
				<tr>
					<th>Film Adı</th>
					<th>Açıklama</th>
					<th>Kategori</th>
					<th>Film Süresi</th>
				</tr>
			</thead>
			<tbody>
				@foreach (MovieVM movie in Model)
				{
					<tr>
						<td>@movie.FilmAdi</td>
						<td>@movie.Aciklama</td>
						<td>@movie.KategoriId</td>
						<td>@movie.FilmSure</td>
						<td class="text-end">
							<a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Düzenle</a>
							<a asp-action="DeleteMovie" asp-route-id="@movie.Id"
						   onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz Kullanıcı=@movie.FilmAdi')"
						   class="btn btn-danger btn-sm text-white"><i class="fa fa-trash me-2"></i>Sil</a>

						</td>


					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
